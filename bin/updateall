#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
if [[ "${TRACE-0}" == "1" ]]; then
    set -o xtrace
fi

main() {
    echo ====== Running apt update ======
    apt update -y

    echo
    echo ===== Running apt upgrade ======
    apt upgrade -y

    echo
    echo ==== Running apt autoremove ====
    apt autoremove -y
}

main "$@"
